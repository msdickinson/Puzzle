<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="432.5" Width="411.5">
    <Grid x:Name="grid">
        <Button x:Name="btnTick" Content="Tick" HorizontalAlignment="Left" Margin="218,333,0,0" VerticalAlignment="Top" Width="162" Height="22" Click="btnTick_Click"/>
        <Button x:Name="btnReset" Content="Reset" HorizontalAlignment="Left" Margin="218,360,0,0" VerticalAlignment="Top" Width="78" Height="22" Click="btnReset_Click"/>

        <TextBox x:Name="txbTick" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Height="30" Margin="218,298,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="162"/>
        <TextBlock x:Name="tbxConsole" HorizontalAlignment="Left" Margin="214,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="283" Width="166" Background="#FFDEDEDE"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="304,360,0,0" VerticalAlignment="Top" Width="76" Height="22" Click="btnSave_Click"/>
    </Grid>
</Window>